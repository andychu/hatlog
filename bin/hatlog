#!/usr/bin/env python3

import sys
import os
import subprocess
sys.path.append(os.path.dirname(os.path.dirname(os.path.realpath(__file__))))
import re
import hatlog
import ast

from hatlog.prolog import write_prolog




def infer_file(filename):
    with open(filename, 'r') as f:
        source = f.read()
    return infer(source, filename)

def infer(source, filename):
    pl_path = write_prolog(*(hatlog.flatten(ast.parse(source)) + [filename]))
    argv = ['swipl', '-s', pl_path]
    print(argv)
    child = subprocess.Popen(argv, stdout=subprocess.PIPE, stderr=subprocess.PIPE)
    stdout, stderr = child.communicate()
    q = child.returncode
    if q == 0:
        with open('%s.txt' % filename, 'r') as f:
            z = f.read()

        print(z)
    else:
        print('exit code: %d' % q)
    print('stdout')
    print(stdout)
    print('stderr')
    print(stderr)

def main():
    if len(sys.argv) == 1:
        print('python3 <name>')
    else:
        infer_file(sys.argv[1])

if __name__ == '__main__':
    main()
